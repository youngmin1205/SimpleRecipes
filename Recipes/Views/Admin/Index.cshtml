@model IEnumerable<SavedRecipes>
@{
    ViewBag.Title = "All Recipes";
    Layout = "_Layout1";
}

<br />
<br />
<br />

<div class="whole-wrap">
    <div class="container">

        <table class="table table-striped table-bordered table-sm">
            <tr>
                <!--<th class="text-right">ID</th>-->
                <th>Name</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var r in Model)
            {
                <tr>
                    <td>
                        <a asp-action="DisplayPage" asp-controller="Home" class="button1" asp-route-id="@r.RecipeID">@r.Name</a>
                    </td>
                    <td class="text-center">
                        <form asp-action="Delete" asp-controller="Admin" method="post">
                            <a asp-action="Update" asp-controller="Admin" class="btn btn-sm btn-warning"
                               asp-route-recipeId="@r.RecipeID">
                                Update
                            </a>
                            <input type="hidden" name="RecipeID" value="@r.RecipeID" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <div class="text-center">
            <a asp-action="Create" asp-controller="Admin" class="btn btn-primary">Add Recipe</a>
        </div>
    </div>
</div>

